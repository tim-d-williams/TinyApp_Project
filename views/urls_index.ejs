<!-- views/urls_index.ejs -->
<html lang="en">
<head>
  <title>TinyApp</title>
</head>
<body>
<header>
<% include ./partials/_header %>
</header>
  <table>
    <% for(var item in urls) { %>
      <tr>
        <td> <a href=<%= `http://localhost:8080/u/${urls[item].shortURL}` %> >http://localhost:8080/u/<%= urls[item].shortURL %></a> </td>
        <td> <a href=<%= urls[item].url %> target=_blank > <%= urls[item].url %> </td>
        <td> <a href=<%= `/urls/${urls[item].shortURL}` %> > Edit </a> </td>
      <td> <form method="POST" action=<%= `/urls/${item}/delete` %> >
      <button type="submit">DELETE</button>
    </form></td>
      <tr>
      <% } %>
  </table>
  <p><button><a href='/urls/new'>Submit URL for shortening</button></a>
</body>
</html>
